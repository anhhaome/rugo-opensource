{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "standard",
        "plugin:jsdoc/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "ignorePatterns": ["repos/**/*", "test/**/*"],
    "rules": {
        "semi": ["error", "always"],
        "jsdoc/no-undefined-types": "off"
    }
}
