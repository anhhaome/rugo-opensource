{
  "name": "default",
  "schemas": [
    { "$id": "uploadFieldSchema", "type": "file", "ref": "uploads", "prefix": "/uploads/", "mimes": [ "image/jpeg", "image/png" ] },
    {
      "_name": "posts",
      "_driver": "mem",
      "_uniques": ["name", "slug"],
      "_icon": "document-text",
      "type": "object",
      "properties": {
        "name": { "type": "string", "maxLength": 60 },
        "slug": { "type": "string", "maxLength": 60 },
        "desc": { "type": "text" },
        "category": { "type": "relation", "ref": "categories" },
        "image": { "$ref": "uploadFieldSchema" },
        "content": { "type": "rich", "image": { "$ref": "uploadFieldSchema" } }
      },
      "required": ["name", "slug"]
    },
    {
      "_name": "categories",
      "_driver": "mem",
      "_uniques": ["name", "slug"],
      "_icon": "file-tray",
      "type": "object",
      "properties": {
        "name": { "type": "string", "maxLength": 60 },
        "slug": { "type": "string", "maxLength": 60 }
      }
    },
    {
      "_name": "uploads",
      "_driver": "fs",
      "_icon": "images",
      "_static": "/uploads"
    },
    {
      "_name": "users",
      "_driver": "mem",
      "_uniques": [ "email" ],
      "_acl": [ "create" ],
      "_icon": "people",
      "type": "object",
      "properties": {
        "email": { "type": "string" },
        "password": { "type": "string" },
        "apikey": { "type": "string" },
        "perms": {
          "type": "array",
          "items": { "type": "object" }
        }
      },
      "required": [ "email" ]
    },
    {
      "_name": "statics",
      "_driver": "fs",
      "_icon": "folder-open",
      "_static": "/"
    },
    {
      "_name": "views",
      "_driver": "fs",
      "_icon": "folder-open",
      "_view": "/blog"
    }
  ],
  "authModel": "users"
}