{
  "name": "haova",
  "alias": [
    "haova.me"
  ],
  "routes": [
    {
      "method": "get",
      "path": "/blog",
      "handler": "fx.run",
      "input": {
        "spaceId": "_.space.id",
        "driveName": "views",
        "entry": "blog.ejs"
      },
      "output": {
        "body": "_"
      }
    },
    {
      "method": "get",
      "path": "/cv.html",
      "handler": "fx.run",
      "input": {
        "spaceId": "_.space.id",
        "driveName": "views",
        "entry": "cv.ejs",
        "locals.query": "_.query"
      },
      "output": {
        "body": "_"
      }
    },
    {
      "method": "get",
      "path": "/:slug.html",
      "handler": "fx.run",
      "input": {
        "spaceId": "_.space.id",
        "driveName": "views",
        "entry": "post.ejs",
        "locals.params": "_.params"
      },
      "output": {
        "body": "_"
      }
    }
  ],
  "perms": [],
  "schemas": [
    {
      "name": "posts",
      "properties": {
        "title": {
          "type": "String"
        },
        "slug": {
          "type": "String"
        },
        "desc": {
          "type": "String"
        },
        "image": {
          "type": "String",
          "input": "upload"
        },
        "content": {
          "type": "String",
          "input": "rich"
        },
        "published": {
          "type": "Boolean",
          "default": false
        }
      }
    }
  ],
  "createdAt": "2023-03-22T08:31:42.203Z",
  "updatedAt": "2023-04-13T06:29:22.700Z",
  "version": 10,
  "drives": {
    "statics": {
      "mount": "/"
    },
    "views": {
      "icon": "documents"
    }
  },
  "host": "www.haova.me",
  "ssl": true
}